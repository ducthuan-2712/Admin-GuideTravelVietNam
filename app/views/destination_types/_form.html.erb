<%= form_for @type, html: { id: "submit-destination-type-form" }  do |f| %>
  <% if @type.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@type.errors.count, "error") %> prohibited this type from being saved:
      </h2>
      <ul>
        <% @type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="mdc-rows mb30">
  <h3 class="mdc-typography--subtitle1 default-font mb0">Name</h3>
  <div class="text-field-row">
    <%= f.text_field :name, placeholder: "Nha Trang", class: "mdc-text-field__input" %>
  </div>
</div>
<div class="mdc-rows mb30">
  <h3 class="mdc-typography--subtitle1 default-font mb0">Format Name (Alias)</h3>
  <div class="text-field-row">
    <%= f.text_field :format_name, placeholder: "nha-trang", readOnly: true, class: "mdc-text-field__input" %>
  </div>
</div>
<div class="mdc-rows mb30">
  <h3 class="mdc-typography--subtitle1 default-font mb0">Description</h3>
  <div class="text-field-row">
    <%= f.text_area :description, placeholder: "Example: Ho Chi Minh, Ho Noi, ...", class: "mdc-text-field__input" %>
  </div>
</div>
<p>
  <%= f.submit @type.new_record? ? "Create" : "Update", :class => 'hero-button mdc-button mdc-button--raised mdc-ripple-upgraded mdc-ripple-upgraded--foreground-activation' %>
</p>

<% end %>